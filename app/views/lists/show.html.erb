<h1><%= @list.name %></h1>

<div class="row">
  <% @list.movies.each do |movie| %>
    <div class="col-12 col-sm-4 m-2">
      <div class="card">
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <p><%= movie.title %></p>
        <p><%= movie.overview %></p>
      <%= image_tag movie.poster_url, alt: movie.title, class: "avatar" %>
        <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "are you sure?" } %>
        <%= bookmark.comment %>
      </div>
    </div>
  <% end %>
</div>

<p><%= link_to "delete list", list_path(@list), method: :delete %></p>
<p><%= link_to "create bookmark", new_list_bookmark_path(params[:id]) %></p>
<p><%= link_to "back", lists_path %></p>
